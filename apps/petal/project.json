{
  "name": "petal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/petal",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/petal",
        "outputPath": "dist/apps/petal"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/petal"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "petal:build",
        "dev": true,
        "port": "4203",
        "hostname": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "petal:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "petal:build:production",
          "dev": false,
          "port": "process.env.PORT || 4203"
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "petal:build:production"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/petal/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}